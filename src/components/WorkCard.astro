---
interface Props {
  bgColor?: string;
  imageSrc: string;
  imageAlt: string;
  title: string;
  description: string;
  link: string;
  technologies?: string[];
  contributions?: string;
}

const {
  bgColor = "bg-secondary dark:bg-gray-700",
  imageSrc,
  imageAlt,
  title,
  description,
  link,
  technologies = [],
  contributions = "",
}: Props = Astro.props;
---

<div
  class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700 group transition-all duration-300 hover:shadow-lg dark:hover:shadow-primary/5"
>
  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="relative block"
  >
    <div class="aspect-video overflow-hidden relative">
      <img
        src={imageSrc}
        alt={imageAlt}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-110"
      />
      <div
        class="absolute inset-0 bg-gradient-to-b from-primary/80 to-black/90 dark:from-primary/90 dark:to-black/95 opacity-0 group-hover:opacity-100 transition-all duration-300 pointer-events-none"
      >
      </div>
      <div
        class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-all duration-300 overflow-hidden"
      >
        <div class="h-full overflow-y-auto">
          <div class="p-6">
            <div
              class="text-white text-center transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300"
            >
              <div class="mb-6">
                <h4 class="font-semibold mb-3 text-white/90">
                  My Contributions
                </h4>
                <p class="text-sm text-white/80 max-w-prose mx-auto">
                  {contributions}
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-3 text-white/90">
                  Technologies Used
                </h4>
                <div class="flex flex-wrap justify-center gap-2">
                  {
                    technologies.map((tech) => (
                      <span class="px-3 py-1 bg-white/10 dark:bg-black backdrop-blur-sm rounded-full text-sm text-white border border-white/10 dark:border-white/5 transition-colors">
                        {tech}
                      </span>
                    ))
                  }
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="p-4">
      <h3
        class="text-lg font-semibold mb-2 text-gray-900 dark:text-white group-hover:text-primary dark:group-hover:text-primary/90 transition-colors"
      >
        {title}
      </h3>
      <p class="text-sm text-gray-600 dark:text-gray-300">{description}</p>
    </div>
  </a>
</div>
