---
import TechCard from "./TechCard.astro";
---

<div class="font-expertise font-medium px-10 pb-10 lg:pb-0 skills-container">
  <div
    class="font-medium text-3xl md:text-4xl text-black dark:text-white font-main-font pb-4"
  >
    My <span class="text-text_primary dark:text-text_secondary">Skills</span>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 skills-card-container">
    <TechCard
      title="JavaScript"
      description="The language of the web"
      iconSrc="/images/tech/javascript.png"
      iconAlt="JavaScript logo"
    />

    <TechCard
      title="TypeScript"
      description="Type safe JavaScript"
      iconSrc="/images/tech/typescript.png"
      iconAlt="TypeScript logo"
    />

    <TechCard
      title="React"
      description="JavaScript library"
      iconSrc="/images/tech/react.png"
      iconAlt="React logo"
    />

    <TechCard
      title="Tailwind"
      description="CSS framework"
      iconSrc="/images/tech/tailwind.png"
      iconAlt="Tailwind logo"
    />

    <TechCard
      title="Express"
      description="Node.js framework"
      iconSrc="/images/tech/express.png"
      iconAlt="Express logo"
    />

    <TechCard
      title="Node"
      description="JavaScript runtime"
      iconSrc="/images/tech/node.png"
      iconAlt="Node logo"
    />

    <TechCard
      title="Next"
      description="React framework"
      iconSrc="/images/tech/next.png"
      iconAlt="Next logo"
    />

    <TechCard
      title="Supabase"
      description="Lean cloud database"
      iconSrc="/images/tech/supabase.png"
      iconAlt="Supabase logo"
    />

    <TechCard
      title="Svelte"
      description="Frontend framework"
      iconSrc="/images/tech/svelte.png"
      iconAlt="Svelte logo"
    />

    <TechCard
      title="Git"
      description="Version control"
      iconSrc="/images/tech/git.png"
      iconAlt="Git logo"
    />
  </div>
</div>

<script>
  import handleAnimation from "../utils/handleAnimation";
  handleAnimation("bottom", ".skills-container", 1000);
  handleAnimation("bottom", ".skills-card-container", 1300);
</script>
