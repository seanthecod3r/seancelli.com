---
import QualificationsCard from "./QualificationsCard.astro";
import QualificationsWrapper from "./QualificationsWrapper.astro";
---

<div class="flex flex-col gap-4 px-10 pt-20">
  <div class="font-medium text-3xl md:text-4xl text-black font-main-font pb-4">
    My <span class="text-[#0B3D91]">Education</span>
  </div>

  <QualificationsWrapper>
    <div class="edu-1">
      <QualificationsCard
        title="B.S. Computer Science"
        subtitle="California State University, Sacramento"
        timeSpent="2021 - 2024"
      />
    </div>
    <div class="edu-2">
      <QualificationsCard
        title="Associates in Computer Science + Associates in Math and Science"
        subtitle="Folsom Lake College"
        timeSpent="2017 - 2021"
      />
    </div>
  </QualificationsWrapper>
</div>

<script>
  import handleAnimation from "../utils/handleAnimation";
  if (window.matchMedia("(min-width: 1024px)").matches) {
    handleAnimation("right", ".edu-1", 750);
    handleAnimation("right", ".edu-2", 750);
  } else {
    handleAnimation("left", ".edu-1", 0);
    handleAnimation("left", ".edu-2", 0);
  }
</script>
